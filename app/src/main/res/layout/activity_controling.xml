<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:textSize="40dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Controling"
        android:gravity="center"
        android:fontFamily="@font/galyon_bold"/>

    <LinearLayout
        android:id="@+id/rv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/tv_judul"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/widget1"
            android:layout_width="155dp"
            android:layout_height="155dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginLeft="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heater"
                    android:textColor="#000"
                    android:layout_marginTop="-5dp"
                    android:textSize="25dp"
                    android:fontFamily="@font/galyon_bold"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_heater" />
                <Switch
                    android:id="@+id/switch_heater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/galyon_bold"
                    android:text="ON/OFF   " />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/widget2"
            android:layout_alignLeft="@+id/widget1"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_margin="25dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pompa"
                    android:textColor="#000"
                    android:layout_marginTop="-5dp"
                    android:textSize="25dp"
                    android:fontFamily="@font/galyon_bold"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_pompa" />
                <Switch
                    android:id="@+id/switch_pompa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/galyon_bold"
                    android:text="ON/OFF   " />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>